{
    "version": "0.1.0",
    "configurations": [
        { 
            "name": "Launch Electron App",
            "type": "node",
            "program": "${workspaceRoot}/app/app.js", // important
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            // next line is very important
            "runtimeExecutable": "${workspaceRoot}/node_modules/electron-prebuilt/dist/electron.exe",
            "runtimeArguments": [
                "--enable-logging"
            ],
            "env": { }, 
            "sourceMaps": false
        } 
    ]
}